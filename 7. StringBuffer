class Main {
  public static void main(String[] args) {
    //StringBuffer는 문자열을 추가, 변경할 때 사용
    
    //StringBuffer 객체 sb 생성
    StringBuffer sb = new StringBuffer();
    
    //append 메소드를 이용해 문자열을 추가
    sb.append("Hello");
    sb.append(" ");
    sb.append("my world!!");

    //toString메소드를 이용해 sb를 String 자료형으로 변경
    String a = sb.toString();
    System.out.println(a);

    //StringBuffer 객체 sbb 생성
    StringBuffer sbb = new StringBuffer();

    //insert 메소드를 이용해 0번째 위치에 "Hello "라는 문자열 삽입
    sbb.append("my world!!");
    sbb.insert(0, "Hello ");
    }
}
