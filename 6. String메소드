class Main {
  public static void main(String[] args) {
    String a = "Hello";
    String b = "Hello";
    String c = "Java";
    String d = "Hello Java";
    String e = "1:2:3:4";

    //String 내장 메소드인 equals로 a,b,c의 문자열 비교
    System.out.println(a.equals(b));
    System.out.println(a.equals(c));

    //String 메소드인 indexOf로 문자열d에서 "Java"가 시작되는 위치를 출력
    System.out.println(d.indexOf("Java"));

    //String 메소드인 contains로 문자열 d에 "Java"라는 문자열이 있는지 확인
    System.out.println(d.contains("Java"));

    //String 메소드인 charAt로 문자열 d의 4번째 인덱스를 출력 
    System.out.println(d.charAt(4));

    //String 메소드인 replaceAll로 문자열 d의 "Java" 문자열을 "World" 문자열로 변환 후 출력 
    System.out.println(d.replaceAll("Java", "World"));

    //String 메소드인 substring로 문자열 d의 0~3번째 인덱스 값을 출력 (substring(시작위치, 끝위치), 끝위치는 포함하지 않음)
    System.out.println(d.substring(0, 4));

    //String 메소드인 toUpperCase와 toLowerCase로 문자열을 모두 대문자 또는 소문자로 변경
    System.out.println(d.toUpperCase());
    System.out.println(d.toLowerCase());

    //String 메소드인 split로 문자열 e를 문자열 ":"로 나누어 문자열 배열을 생성
    String[] aing = e.split(":");
    }
}
